{% extends 'base.html.twig' %}
{% block body %}

	<div class="container mt-5">
		<h1 class="text-center">LIST POSTS</h1>
	</div>

			<table class="table">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">TITLE</th>
						<th scope="col">ACTIONS</th>
					</tr>
				</thead>
				<tbody>

					{% for post in posts %}
						<tr>
							<td>{{ post.id }}</td>
							<td>{{ post.title }}</td>

							<td>
								<a href="{{ path('post.show', {id: post.id } ) }}">
									<span class="badge bg-primary">VIEW DETAILS</span>
								</a>

								<a href="{{ path('post.delete', {id: post.id } ) }}">
									<span class="badge bg-danger">DELETE</span>
								</a>
							</td>

						</tr>
					{% endfor %}

				</tbody>
			</table>


{% endblock %}
